main.main
  = render 'layouts/banner'
  div.container.events-list
    - if events.size > 0
      - events.each do |event|
        div.row.events-row
          div.col-12.col-sm-6.events-row__image-wrapper
            - if event.images.attached?
              p.events-row__image
                = image_tag event.images.first
            p.event-date.d-flex.flex-column.justify-content-center.align-items-center
              span.event-date__day
                = event.date.strftime("%d") 
              span.event-date__month
                = event.date.strftime("%b") 
          div.col-12.col-md-6
            div.events-row__info
              h3
                = event.title
              h4
                = event.date.strftime("%d.%m.%y")
              - unless event.speakers.size.zero?
                h4.events-row__speakers-title
                  - if event.speakers.size == 1
                    | Спікер:
                  - else
                    | Спікери:
                ul.events-row__speakers
                  - event.speakers.each do |speaker|
                    li
                      h4
                        = "#{speaker.first_name} #{speaker.last_name}"
              div.events-row__desc
                div.events-row__desc-inner
                  = event.description.body.html_safe
              div.events-row__links
                button.events-row__read-more.read-more.button-with-arrow
                  p.arrow
                    span.arrow__line.arrow__line_left
                    span.arrow__line.arrow__line_right
                  | читати більше
                - if !event.youtube_link.nil? && !event.mixcloud_link.nil?
                  ul
                    -unless event.youtube_link.empty?
                      li
                        a href="#{event.youtube_link}"
                          = image_tag "youtube.png"
                    -unless event.mixcloud_link.empty?
                      li
                        a href="#{event.mixcloud_link}"
                          = image_tag "mixcloud.png"
