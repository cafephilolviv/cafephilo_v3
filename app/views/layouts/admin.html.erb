<!DOCTYPE html>
<html>
  <head>
    <title>Admin dashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="admin__layout">
      <nav id="admin__navigation">
        <li><%= link_to(t('event', scope: :admin), admin_events_path) %></li>
        <li><%= link_to(t('new_event', scope: :admin), new_admin_event_path) %></li>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
